<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefHeight="231.0" prefWidth="383.0" style="-fx-background-color: #dbab84;" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controlador.ModificarCitaClienteController">

    <!-- Título de la ventana con fuente Arial y tamaño 20 -->
    <Label alignment="center" style="-fx-font-family: Arial; -fx-font-size: 20;" text="Modificar Cita" GridPane.columnSpan="2" />

    <!-- Fecha de Cita -->
    <Label text="Fecha de Cita:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <DatePicker fx:id="fechaCita" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <!-- Hora de Cita -->
    <Label text="Hora de Cita:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="horaCita" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <!-- Botones de Acción con los mismos colores que tenías -->
    <HBox alignment="center" spacing="20" GridPane.columnSpan="2" GridPane.rowIndex="3">
        <Button onAction="#guardarCambios" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Guardar Cambios" />
        <Button onAction="#cancelarEdicion" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Cancelar" />
    </HBox>

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

</GridPane>
