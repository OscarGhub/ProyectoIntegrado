<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import org.kordamp.bootstrapfx.BootstrapFX?>
<VBox alignment="CENTER" prefHeight="400" prefWidth="400" spacing="12" style="-fx-background-color: #dbab84;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.ModificarPerrosAniadirController">
    <stylesheets>
        <BootstrapFX fx:factory="bootstrapFXStylesheet"/>
    </stylesheets>
    <children>
        <Label style="-fx-text-fill: #3d2e1f;" text="Modificar Cita">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label style="-fx-text-fill: #3d2e1f;" text="Nombre" />
      <TextField fx:id="textNombre" alignment="CENTER" prefHeight="26.0" prefWidth="282.0" promptText="- Nombre Perro -">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </TextField>

        <Label style="-fx-text-fill: #3d2e1f;" text="Fecha Nacimiento" />
      <DatePicker fx:id="textFechaNacimiento" prefHeight="26.0" prefWidth="301.0" promptText="                                    - Fecha -" />
      <ComboBox fx:id="comboBoxRaza" prefWidth="150.0" promptText="                 Raza">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></ComboBox>
      <ComboBox fx:id="comboBoxSexo" prefWidth="150.0" promptText="                 Sexo">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </ComboBox>

        <Button maxWidth="150" onAction="#btnGuardarCambios" styleClass="bg-primary" text="Guardar Cambios">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></Button>
    </children>

    <padding>
        <Insets bottom="20" left="30" right="30" top="20" />
    </padding>
</VBox>
