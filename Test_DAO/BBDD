
-- Tabla frutas
CREATE TABLE frutas (
    id NUMBER GENERATED BY DEFAULT ON NULL AS IDENTITY PRIMARY KEY,
    nombre VARCHAR2(100) NOT NULL,
    color VARCHAR2(100),
    precio_kg NUMBER,
    proveedor_id NUMBER

);


